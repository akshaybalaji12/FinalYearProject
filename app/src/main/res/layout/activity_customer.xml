<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CustomerActivity"
    android:background="@color/white">

    <ImageView
        android:id="@+id/qrCodeImage"
        android:layout_centerInParent="true"
        android:tint="@color/colorAccent"
        android:src="@drawable/qr_code_icon"
        android:clickable="true"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:focusable="true"
        android:contentDescription="@string/scan"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qrCodeImage"
        android:layout_centerInParent="true"
        android:layout_margin="24dp"
        android:text="@string/scan"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:visibility="visible"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/productLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:layout_margin="10dp"
            android:text="Product Details"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/productName"
            android:layout_width="match_parent"
            android:gravity="start"
            android:paddingStart="25dp"
            android:paddingEnd="0dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:text="@string/productID"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/caughtAt"
            android:layout_width="match_parent"
            android:gravity="start"
            android:paddingStart="25dp"
            android:paddingEnd="0dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:text="@string/productID"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/caughtOn"
            android:layout_width="match_parent"
            android:gravity="start"
            android:paddingStart="25dp"
            android:paddingEnd="0dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:text="@string/productID"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/processedBy"
            android:layout_width="match_parent"
            android:gravity="start"
            android:paddingStart="25dp"
            android:paddingEnd="0dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:text="@string/productID"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/processedOn"
            android:layout_width="match_parent"
            android:gravity="start"
            android:paddingStart="25dp"
            android:paddingEnd="0dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="@string/productID"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/method"
            android:layout_width="match_parent"
            android:gravity="start"
            android:paddingStart="25dp"
            android:paddingEnd="0dp"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="@string/productID"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/expiryDate"
            android:layout_width="match_parent"
            android:gravity="start"
            android:paddingStart="25dp"
            android:paddingEnd="0dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:text="@string/productID"
            android:textSize="20sp"/>

    </LinearLayout>

</RelativeLayout>